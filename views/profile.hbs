<!-- profile -->
<link href="/css/profile.css" rel="stylesheet"/>
<body>
    {{> header }}

  {{> nav }}

    <div>
        {{#each profile_data}}
        <div class="profile-info">
            <img src="{{profile_picture}}" >
            <div class="user-details">
                <h2>{{full_name}}</h2>
                <p>{{occupation}}</p>
            </div>
        </div>

        <div class="user-actions">
            <button>Edit Profile</button>
        </div>

        <div class="user-posts">
            <h2>User Posts</h2>
            {{#each posts}}
            <div class="post">
                <h3>{{title}}</h3>
                <p>Date: {{date}}</p>
                <p>{{content}}</p>
            </div>
            {{/each}}
        </div>

        <div class="badges">
            <h2>Badges</h2>
            {{#each badges}}
            <div class="badge {{badge_class}}">{{badge_text}}</div>
            {{/each}}
        </div>
        {{/each}}
    </div>

</body>