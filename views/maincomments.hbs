<!-- event page -->
<link href="/css/maincomments.css" rel="stylesheet" />

<body>
  {{> header }}
  {{> nav }}

  <div class="post">
    <div>
      <h3>{{post.post_title}}</h3>
      <p>Posted by: <a href="/profile/{{post.post_auhtor}}">{{post.post_poster}}</a> | Date: {{post.post_date}}</p>
      <p>{{post.post_content}}</p>
    </div>

    <div class="like-dislike">
      <button type="button" class="btn btn-success like-btn">Like <span class="like-count">0</span></button>
      <button type="button" class="btn btn-danger dislike-btn">Dislike <span class="dislike-count">0</span></button>
    </div>

    <form id="commentForm" action="/submitComment" method="POST">
      <input type="hidden" id="postId" name="postId" value="{{post.post_id}}">
      <input type="text" placeholder="Add a comment..." class="comment-input" name="commentText" maxlength="500">
      <button type="submit" class=" btn btn-primary btn-add-comment">Add Comment</button>
    </form>

    {{#each feedback}}
    <div class="comment">
      <p><strong>{{comment_author}}</strong> | {{comment_date}}</p>
      <p>{{comment_content}}</p>
    </div>
    {{/each}}
  </div>


  <script src="/js/maincomments.js"></script>
</body>